<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Spring MVC Demo Application</display-name>

	<servlet>
		<!-- Servlet name here must be same as servlet-name in servlet-mapping -->
		<servlet-name>myfirst</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet.class</servlet-class>
	</servlet>


	<!-- after creating this we need to create spring bean configuration file 
		inside WEB-INF folder. While creating file select XSD as beans, context, 
		utils and then finish -->
	<servlet-mapping>
		<servlet-name>myfirst</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>
